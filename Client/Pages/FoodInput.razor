@using System.Collections.Generic
@using DailyFood.Shared


<div class="d-flex">
    <FoodTypeInput InputOptions="@InputOptions" InputOptionSelected="FoodChosen"></FoodTypeInput>
    <InputNumber @bind-Value="FoodEntry.Weight"></InputNumber>
    <InputDate @bind-Value="FoodEntry.Date"></InputDate>
</div>


@code {
    [Parameter, EditorRequired]
    public FoodEntry FoodEntry { get; set; } = new();
    [Parameter]
    public List<Food> InputOptions { get; set; } = new List<Food>();

    

    private void FoodChosen (Food food)
    {
        FoodEntry.FoodType = food;
    }
}

